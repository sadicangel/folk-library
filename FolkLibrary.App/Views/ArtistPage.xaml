<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:FolkLibrary.App.ViewModels"
    x:Class="FolkLibrary.App.Views.ArtistPage"
    x:DataType="viewmodels:ArtistViewModel"
    Title="{Binding Artist.Name}">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Loaded"
            Command="{Binding LoadedCommand}" />
    </ContentPage.Behaviors>
    <VerticalStackLayout>
        <Label
            FontSize="Subtitle"
            Text="{Binding Artist.Name}" />
        <Label
            Text="{Binding Artist.Year, StringFormat='Est.: {0}'}" />
        <Label
            Text="{Binding Location, StringFormat='Location: {0}'}" />
    </VerticalStackLayout>
</ContentPage>